@model Account

@{
    ViewData["Title"] = "로그인 | R2D ERP";
}

<div class="container-fluid justify-content-center mt-5 text-center">
    <p class="text-dark">아이디가 없다면 담당자와 상의하세요.</p>

    <div class="container-sm  bg-dark mt-4 rounded-4 p-3" style="width: 400px;">
        <form asp-controller="Home" asp-action="SignIn" method="post">
            <div class="mb-4 mt-3 ">
                <label class="form-label text-white">아이디</label>
                <input type="text" asp-for="Account_ID" class="form-control" placeholder="아이디를 입력하세요">
            </div>
            <div class="mb-4">
                <label class="form-label  text-white">비밀번호</label>
                <input type="password" asp-for="Account_Password" class="form-control" placeholder="비밀번호를 입력하세요">
            </div>

            <button type="submit" class="btn bg-white text-dark mt-3 mb-3 fs-5 fw-bold w-100">로그인</button>
        </form>
    </div>
</div>
